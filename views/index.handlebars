<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>



<ul>
 
  {{#each burgers}}
  
 
  

  <li>
    {{burger_name}}

    <button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
      {{#if devoured}}devoured!{{else}}not devoured!{{/if}}
    </button>
   

  
  </li>
  

  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
  <li>
    {{burger_name}}

    <button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
      {{#if devoured}}devoured!{{else}}not devoured!{{/if}}
    </button>

  </li>

  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>